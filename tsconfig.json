{
  "compilerOptions": {
    "target": "ES2017",                            
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "Node",
    "baseUrl": "./main",
    "types": ["node"],
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,                      
    "forceConsistentCasingInFileNames": true,
    "strict": true,  
    "skipLibCheck": true,                                 
  }
}